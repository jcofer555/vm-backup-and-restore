            const data = await res.json();
            updateRunButtons(Boolean(data.locked));
        } catch (e) {
            console.error('Failed to check lock:', e);
        }
    }

    // Initial check
    pollLock();

    // Poll continuously
    setInterval(pollLock, CHECK_INTERVAL);
})();


