    if (parts.length !== 5) return { valid: false };
    if (parts[0] === '*') return { valid: false };
    const m = parts[0].match(/^\*\/(\d+)$/);
    if (m && parseInt(m[1], 10) < 2) return { valid: false };
    return { valid: true, expression: expr };
  }

