      updateBackupButtonState();
      return;
    }

    // ---------------------------------------------------------
    // Custom mode ‚Üí strict cron validation
    // ---------------------------------------------------------
    const cronExpression = cronInput.value.trim();
    const cronParts = cronExpression.split(/\s+/);

    // Hide warnings at start
    [warnFields, warnSlash].forEach(w => w.style.display = 'none');

    cronValid = true;

    // Blank ‚Üí invalid
    if (cronExpression === "") {
      cronValid = false;
      updateBackupButtonState();
      return;
    }

    // Must have exactly 5 parts
    if (cronParts.length !== 5) {
      cronValid = false;
      warnFields.style.display = 'block';
    }

    // Only validate fields if count is correct
    if (cronParts.length === 5) {

      for (let i = 0; i < cronParts.length; i++) {
        const field = cronParts[i];

        // Only digits, *, and / allowed
        if (!/^[\d*\/]+$/.test(field)) {
          cronValid = false;
          warnFields.style.display = 'block';
        }

        // Slash must be exactly */N
        if (field.includes('/')) {
          const validStep = field.match(/^\*\/\d+$/);
          if (!validStep) {
            cronValid = false;
            warnSlash.style.display = 'block';
          }
        }
      }

